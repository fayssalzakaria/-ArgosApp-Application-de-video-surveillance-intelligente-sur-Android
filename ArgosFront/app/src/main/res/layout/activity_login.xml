<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#F0F5FE">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="91dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Logo d'Argos App"
            android:src="@drawable/argoslogoreal" />

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="300dp"
            android:background="@drawable/bordure"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:hint="Identifiant"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textColorHint="#000000"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bordure2"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:alpha="0.3"
                android:elevation="0dp"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"/>

            <ImageView
                android:id="@+id/imageViewTogglePassword"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/oeil"
                android:contentDescription="Afficher/Masquer mot de passe"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:textSize="20dp"
            android:backgroundTint="#2B49CA"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="172dp"
            android:layout_height="67dp"
            android:layout_marginTop="50dp"
            android:contentDescription="Logo d'Argos Systems"
            android:src="@drawable/argossystemslogo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>